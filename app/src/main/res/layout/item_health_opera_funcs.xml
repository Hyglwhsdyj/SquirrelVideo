                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen16"
                android:ellipsize="none"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dimen_opposite_3"
                android:maxLines="2"
                android:textColor="#fff"
                android:textSize="@dimen/font_dimen_28" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen16"
            android:scaleType="centerCrop"
            android:src="@drawable/delete_btn"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="@dimen/dimen280"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen100"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="@dimen/dimen280"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_whole"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0"
        android:layout_weight="29">

        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen60"
            android:paddingBottom="@dimen/dimen50"
            android:paddingRight="@dimen/dimen80"
            android:paddingTop="@dimen/dimen50"
            android:scaleType="centerCrop"
            android:src="@drawable/go_back_selector" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="全部分类"
            android:textColor="#fff"
            android:textSize="@dimen/font_dimen_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen60"
            android:text="点击添加可将分类添加到首页"
            android:textColor="#fff"
            android:textSize="@dimen/font_dimen_16" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0"
        android:layout_weight="131"
        android:paddingBottom="@dimen/dimen55"
        android:paddingLeft="@dimen/dimen140"
        android:paddingRight="@dimen/dimen140">

        <ListView
            android:id="@+id/lv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/ss_transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:listSelector="@color/ss_transparent"
            android:scrollbars="none" />


    </LinearLayout>

</LinearLayout>
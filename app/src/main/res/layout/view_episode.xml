<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.songshu.squirrelvideo.view.MyGridView
        android:id="@+id/gv_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/dimen25"
        android:listSelector="@color/ss_transparent"
        android:numColumns="8"
        android:paddingRight="@dimen/dimen25"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dimen25" />

    <com.songshu.squirrelvideo.view.MyHorizontalScrollView
        android:id="@+id/hsv_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ss_transparent"
        android:paddingTop="@dimen/dimen25"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rg_episode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen50"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </com.songshu.squirrelvideo.view.MyHorizontalScrollView>

</LinearLayout>
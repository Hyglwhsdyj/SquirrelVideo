<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen60">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="@dimen/dimen180"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="@dimen/dimen180"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_video_pic_1"
                android:layout_width="@dimen/dimen180"
                android:layout_height="@dimen/dimen230"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_shade_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen6"
                android:background="#66000000" />

            <TextView
                android:id="@+id/tv_video_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen16"
                android:ellipsize="none"
                android:gravity="center"
                android:lineSpacingExtra="-3dp"
                android:maxLines="2"
                android:textColor="#fff"
                android:textSize="@dimen/font_dimen_24" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dimen16"
            android:scaleType="centerCrop"
            android:src="@drawable/local_media_delete_btn"
            android:visibility="gone" />

    </RelativeLayout>



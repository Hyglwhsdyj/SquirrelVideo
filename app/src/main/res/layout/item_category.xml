<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_whole_1"
        android:layout_width="@dimen/dimen420"
        android:layout_height="@dimen/dimen151"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_whole_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0"
            android:layout_weight="150"
            android:clickable="true">

            <com.makeramen.RoundedImageView
                android:id="@+id/riv_1"
                style="@style/RoundPhoto"
                android:layout_width="@dimen/dimen100"
                android:layout_height="@dimen/dimen100"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_sub_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_toRightOf="@id/riv_1"
                android:text="aaaa"
                android:textColor="#fff"
                android:textSize="@dimen/font_dimen_28" />

            <RelativeLayout
                android:id="@+id/rl_selected_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingBottom="@dimen/dimen20"
                android:paddingTop="@dimen/dimen20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/category_select_btn_delete_sharp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/font_dimen_24" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_un_selected_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingBottom="@dimen/dimen20"
                android:paddingTop="@dimen/dimen20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/category_select_btn_add_sharp" />

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_toRightOf="@id/iv_1"
                    android:text="添加"
                    android:textColor="#33cc66"
                    android:textSize="@dimen/font_dimen_24" />

            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0"
            android:layout_weight="1"
            android:src="#40ffffff" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_whole_2"
        android:layout_width="@dimen/dimen420"
        android:layout_height="@dimen/dimen151"
        android:layout_marginLeft="@dimen/dimen160"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_whole_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0"
            android:layout_weight="150"
            android:clickable="true">

            <com.makeramen.RoundedImageView
                android:id="@+id/riv_2"
                style="@style/RoundPhoto"
                android:layout_width="@dimen/dimen100"
                android:layout_height="@dimen/dimen100"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_sub_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_toRightOf="@id/riv_2"
                android:text="aaaa"
                android:textColor="#fff"
                android:textSize="@dimen/font_dimen_28" />

            <RelativeLayout
                android:id="@+id/rl_selected_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingBottom="@dimen/dimen20"
                android:paddingTop="@dimen/dimen20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/category_select_btn_delete_sharp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/font_dimen_24" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_un_selected_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingBottom="@dimen/dimen20"
                android:paddingTop="@dimen/dimen20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/category_select_btn_add_sharp" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_toRightOf="@id/iv_2"
                    android:text="添加"
                    android:textColor="#33cc66"
                    android:textSize="@dimen/font_dimen_24" />

            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0"
            android:layout_weight="1"
            android:background="#40ffffff" />

    </LinearLayout>


</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="@dimen/dimen180"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="@dimen/dimen180"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_video_pic_1"
                android:layout_width="@dimen/dimen180"
                android:layout_height="@dimen/dimen230"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_shade_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen6"
                android:background="#66000000" />

            <TextView
                android:id="@+id/tv_video_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen16"
                android:ellipsize="none"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dimen_opposite_3"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="@dimen/font_dimen_28" />

            <TextView
                android:id="@+id/tv_video_episode_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="@dimen/font_dimen_28" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_download_layer_1"
            android:layout_width="@dimen/dimen180"
            android:layout_height="@dimen/dimen236"
            android:background="#b2000000"
            android:visibility="gone">

            <com.songshu.squirrelvideo.view.CycleProcessBar
                android:id="@+id/cp_download_process_1"
                android:layout_width="@dimen/dimen110"
                android:layout_height="@dimen/dimen110"
                android:layout_centerInParent="true"
                custom:roundColor="#797979"
                custom:roundProgressColor="#59db33"
                custom:roundWidth="4dip"
                custom:textColor="#fff"
                custom:textIsDisplayable="true"
                custom:textSize="@dimen/font_dimen_24" />

            <ImageView
                android:id="@+id/iv_download_pause_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/download_stop" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_download_layer_hold_1"
            android:layout_width="@dimen/dimen180"
            android:layout_height="@dimen/dimen236"
            android:background="#b2000000"
            android:clickable="true"
            android:visibility="gone">


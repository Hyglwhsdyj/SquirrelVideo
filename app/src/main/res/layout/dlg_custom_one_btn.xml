<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dimen400"
        android:layout_height="@dimen/dimen270"
        android:background="@drawable/dlg_custom_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen0"
            android:layout_weight="1">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="删除评论"
                android:textColor="#333333"
                android:textSize="@dimen/font_dimen_28" />

        </RelativeLayout>

        <View
            android:id="@+id/divider_hori"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:id="@+id/ll_btns"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen70">

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dlg_custom_btn_one_bg_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#333333"
                android:textSize="@dimen/font_dimen_28" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>